<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Górny napis -->

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="104dp"
            android:text="NIETOLERKA / AllergoLog"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Dodaj produkt -->
        <LinearLayout
            android:id="@+id/addProductButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="178dp"
            android:layout_marginEnd="13dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttom_add_product"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@android:drawable/ic_input_add"
                app:tint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="DODAJ PRODUKT"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Sekcja Często dodawane -->
        <TextView
            android:id="@+id/frequentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addProductButton"
            android:layout_marginStart="16dp"
            android:layout_marginTop="208dp"
            android:text="CZĘSTO DODAWANE"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/frequentLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="72dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="16dp">

                <!-- Można tu dynamicznie dodawać widoki lub użyć RecyclerView -->

                <!-- dodaj więcej obrazków... -->

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Ikona ładowania zamiast gwiazdek -->
        <ImageView
            android:id="@+id/loadingIcon"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="104dp"
            android:contentDescription="Ładowanie"
            android:src="@android:drawable/progress_indeterminate_horizontal" />
    </RelativeLayout>

    <!-- Dolna nawigacja -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:menu="@menu/activity_bottom_nav_menu"
        app:itemIconTint="@color/black"
        android:background="?android:attr/windowBackground" />

</FrameLayout>
